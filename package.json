{
    "name": "vsc-crossbuild",
    "displayName": "CrossBuild",
    "description": "C/C++ Build System for Embedded Development",
    "version": "0.1.1",
    "publisher": "kiwep",
    "preview": true,
    "icon": "vsc-crossbuild.png",
    "author": {
        "name": "Peter Kovacs",
        "email": "http://elasticwings.com"
    },
    "repository": {
        "url": "https://github.com/kwep/vsc-crossbuild.git"
    },
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:CrossBuild.editConfigCommand",
        "onCommand:CrossBuild.excludeDirCommand",
        "onCommand:CrossBuild.excludeFileCommand",
        "onCommand:workbench.action.tasks.runTask",
        "workspaceContains:.vscode/crossbuild.json"
    ],
    "main": "./out/src/main",
    "contributes": {
        "commands": [
            {
                "command": "CrossBuild.editConfigCommand",
                "title": "Edit Configurations...",
                "category": "CrossBuild"
            },
            {
                "command": "CrossBuild.showTargetListCommand",
                "title": "Show Target List...",
                "category": "CrossBuild"
            }
        ],
        "commands_disabled": [
            {
                "command": "CrossBuild.excludeDirCommand",
                "title": "Exclude Folder from Build",
                "category": "CrossBuild"
            },
            {
                "command": "CrossBuild.excludeFileCommand",
                "title": "Exclude File from Build",
                "category": "CrossBuild"
            }
        ],
        "menus_disabled": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder == true",
                    "command": "CrossBuild.excludeDirCommand",
                    "group": "other"
                },
                {
                    "when": "resourceLangId == c",
                    "command": "CrossBuild.excludeFileCommand",
                    "group": "other"
                },
                {
                    "when": "resourceLangId == cpp",
                    "command": "CrossBuild.excludeFileCommand",
                    "group": "other"
                },
                {
                    "when": "resourceLangId == arm",
                    "command": "CrossBuild.excludeFileCommand",
                    "group": "other"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "CrossBuild Configuration",
            "properties": {
                "crossbuild.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable/disable CrossBuild"
                },
                "crossbuild.generateVsCCppProperties": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically generate and maintain c_cpp_properties.json"
                },
                "crossbuild.nodePath": {
                    "type": "string",
                    "default": "node",
                    "description": "Path to Node.js binary"
                },
                "crossbuild.ninjaPath": {
                    "type": "string",
                    "default": "ninja",
                    "description": "Path to Ninja binary"
                }
            }
        },
        "taskDefinitions": [
            {
                "type": "cross",
                "required": [
                    "command"
                ],
                "properties": {
                    "command": {
                        "type": "string",
                        "description": "The command to execute (build or clean)",
                        "default": "build"
                    }
                }
            }
        ],
        "problemMatchers": [
            {
                "name": "gcc",
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/commander": "^2.9.1",
        "@types/glob": "^5.0.30",
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "@types/rimraf": "0.0.28",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "commander": "^2.11.0",
        "glob": "^7.1.2",
        "jsonc-parser": "^1.0.0",
        "rimraf": "^2.6.1"
    }
}
